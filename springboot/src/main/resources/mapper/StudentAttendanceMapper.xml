<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.mapper.StudentAttendanceMapper">

    <insert id="insert">
        insert into student_attendance(student_id,attendance_time)
        values (#{studentId}, #{attendanceTime})
    </insert>

    <select id="findStudentIds" resultType="java.lang.Integer">
        SELECT student_id FROM student_attendance
    </select>

</mapper>
