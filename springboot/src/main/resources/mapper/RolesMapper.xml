<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.mapper.RolesMapper">
    <insert id="insertRole">
        INSERT INTO roles (username, nickname, password, role)
        VALUES (#{username},#{nickname},#{password},#{role})
    </insert>


    <select id="selectUsername" resultType="com.example.springboot.domain.Roles">
        SELECT * FROM roles WHERE username=#{username}
    </select>
    <select id="listByCondition" resultType="com.example.springboot.domain.Roles">
        select * from roles
        <where>
            <if test="nickname != null and nickname != ''">
                nickname like concat('%', #{ nickname }, '%')
            </if>
            <if test="address != null and address != ''">
                and address  like concat('%', #{ address }, '%')
            </if>
            <if test="email != null and email != ''">
                and email  like concat('%', #{ email }, '%')
            </if>
        </where>
        order by id desc
    </select>
    <select id="getById" resultType="com.example.springboot.domain.Roles">
        select * from roles where id = #{id}
    </select>
</mapper>
